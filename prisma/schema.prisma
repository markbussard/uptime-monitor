generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MonitorStatus {
  PAUSED
  STARTED
  UP
  DOWN

  @@map("monitor_status")
}

enum HttpMethodType {
  HEAD
  GET
  POST
  OPTIONS

  @@map("http_method_type")
}

model Monitor {
  id             String         @id @default(cuid())
  userId         String         @map("user_id")
  name           String
  status         MonitorStatus  @default(STARTED)
  url            String
  interval       Int            @db.SmallInt
  lastCheck      DateTime?      @map("last_check") @db.Timestamptz()
  timeout        Int            @default(15)
  httpMethodType HttpMethodType @map("http_method_type")
  createdAt      DateTime       @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt      DateTime       @updatedAt @map("updated_at") @db.Timestamptz()
  incidents      Incident[]

  @@map("monitor")
}

model Incident {
  id        String    @id @default(cuid())
  monitorId String    @map("monitor_id")
  startTime DateTime  @map("start_time") @db.Timestamptz()
  endTime   DateTime? @map("end_time") @db.Timestamptz()

  monitor Monitor @relation(fields: [monitorId], references: [id])

  @@map("incident")
}
